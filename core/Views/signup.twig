{ extends 'base.twig' }

{ block title}Sign Up{ endblock }

{ block content }
<div class='container'>
	<div class='rows'>
		<div class="col-md-6 col-lg-6 visible-md-block visible-lg-block">
			<div class='panel panel-default'>
				<div class='panel-heading'><strong>Sign Up for <span class='brand'>TECHiNA</span> </strong></div>
				<div class='panel-body'>
					<form role='form' method='POST' action='/signup' id='registerf'>
						<input type="hidden" name="integrity" value='{{ integrity }}'>
						<div class='form-group'>
							<label for="name">Name</label>
							<input type="text" name="name" id="name" placeholder="Your Name" class="form-control">
						</div>
						<div class='form-group'>
							<label for="email">Email Address</label>
							<input type="email" name="email" id="email" placeholder="Your Email Address" class="form-control">
						</div>
						<div class="form-group">
							<label for="password">Password</label>
							<input type="password" name="password" id="password" placeholder="Choose Password" class="form-control">
						</div>
						<div class="form-group">
							<button type='submit' class='btn btn-success' id='register'>SIgn Up</button>
							<a href='/login' class='btn btn-link'>Login</a>
						</div>
					</form>
				</div>
			</div>
		</div>
		<div class="col-md-6 col-lg-6 visible-md-block visible-lg-block"></div>
	</div>
</div>
{ endblock }

{ block footer }
<script src="{{ 'js'|url_for('register') }}"></script>
{ endblock }